<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Nota: El tema principal ahora se define en themes.xml para seguir las recomendaciones de Material Design -->
    
    <!-- Estilos de componentes específicos -->
    
    <!-- Estilo para los diálogos -->
    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/dialog_background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>
    
    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_500</item>
        <item name="rippleColor">@color/primary_700</item>
    </style>
    
    <!-- Estilo para tarjetas -->
    <style name="CardStyle">
        <item name="android:background">@color/card_background</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- Estilo para botones -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/button_text</item>
        <item name="backgroundTint">@color/button_blue</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Estilo para widgets con borde -->
    <style name="WidgetStyle">
        <item name="android:background">@drawable/widget_border_background</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Animaciones de ventana para diálogos (nombre simple para evitar conflictos en R) -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_scale_out</item>
    </style>
</resources>
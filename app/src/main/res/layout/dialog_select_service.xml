<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/bg_modal_black">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_service_type"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:id="@+id/service_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_bordado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bordados"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_accent_gradient"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_planchado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/planchados"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_accent_gradient"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_chompa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/chompas_pendientes"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_accent_gradient"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_poncho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ponchos_pendientes"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_accent_gradient"
            android:textColor="@color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancelar"
        android:background="@drawable/button_rounded_blue"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/service_options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
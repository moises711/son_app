<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_large"
    android:background="@drawable/bg_modal_black">

    <TextView
        android:id="@+id/tv_config_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/configuracion_titulo"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/margin_large" />

    <!-- Moneda -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/moneda"
        app:hintTextColor="@color/balance_blue"
        android:textColorHint="@color/balance_blue"
        app:boxStrokeColor="@color/balance_blue"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_config_moneda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="3"
            android:text="PEN"
            android:textColor="@color/white"
            android:backgroundTint="#33FFFFFF" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Formato de fecha -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/formato_fecha"
        app:hintTextColor="@color/balance_blue"
        android:textColorHint="@color/balance_blue"
        app:boxStrokeColor="@color/balance_blue"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_config_formato_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="dd/MM/yyyy"
            android:textColor="@color/white"
            android:backgroundTint="#33FFFFFF" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Mostrar decimales -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_large">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mostrar_decimales"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_config_decimales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

    </LinearLayout>

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_config_cancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancelar"
            android:textColor="@color/white"
            android:background="@drawable/button_rounded_blue"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btn_config_guardar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/guardar"
            android:textColor="@color/white"
            android:background="@drawable/button_accent_gradient"
            android:layout_marginStart="4dp" />

    </LinearLayout>

</LinearLayout>
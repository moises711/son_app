<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_modal_black">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adelantos del Jefe"
        android:textAlignment="center"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxHeight="400dp">

        <TableLayout
            android:id="@+id/table_adelantos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_500"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ObservaciÃ³n"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monto"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_no_adelantos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No hay adelantos registrados"
        android:textColor="@color/text_primary"
        android:textAlignment="center"
        android:padding="16dp"
        android:visibility="gone" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Monto de adelanto"
        app:hintTextColor="@color/balance_blue"
        android:textColorHint="@color/balance_blue"
        app:boxStrokeColor="@color/balance_blue"
        android:layout_marginTop="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_adelanto_monto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColor="@color/text_primary"
            android:backgroundTint="#33FFFFFF" />

    </com.google.android.material.textfield.TextInputLayout>

    

    <Button
        android:id="@+id/btn_add_adelanto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar adelanto"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_bordered_accent" />

    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_rounded_blue" />

</LinearLayout>

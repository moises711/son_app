<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="24dp"
        android:clipToPadding="false"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/main_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            
            <!-- Panel de estado financiero general -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_estado_general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_card_bordered"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Título -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="@string/estado_financiero_titulo"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />

                    <!-- Métricas en tarjetas (Saldo General / Ingresos Hoy) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_saldo_general"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:strokeColor="@color/widget_border"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/saldo_general_etiqueta"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_size_small" />

                                <TextView
                                    android:id="@+id/tv_saldo_general"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:gravity="end"
                                    android:text="@string/saldo_general_label"
                                    android:textColor="@color/balance_blue"
                                    android:textSize="@dimen/text_size_medium"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:strokeColor="@color/widget_border"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/ingresos_hoy_etiqueta"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_size_small" />

                                <TextView
                                    android:id="@+id/tv_ingresos_hoy"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:gravity="end"
                                    android:text="@string/ingresos_hoy_valor"
                                    android:textColor="@color/success_color"
                                    android:textSize="@dimen/text_size_medium"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- Divisor sutil entre métricas y meta -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/widget_border" />

                    <!-- Meta de ingresos y progreso -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_meta_ingresos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Meta no establecida"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_medium" />

                        <ProgressBar
                            android:id="@+id/progress_meta_ingresos"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:backgroundTint="@color/primary_700"
                            android:max="100"
                            android:progress="0"
                            android:progressTint="@color/balance_green" />

                        <TextView
                            android:id="@+id/tv_meta_detalle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text=""
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_small" />
                    </LinearLayout>

                    <!-- Total Registros -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/total_registros_etiqueta"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/tv_total_registros"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_registros_valor"
                            android:textColor="@color/balance_green"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Botón de Configuración -->
                    <Button
                        android:id="@+id/btn_configuracion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/primary_500"
                        android:drawableStart="@android:drawable/ic_menu_preferences"
                        android:drawableTint="@color/white"
                        android:gravity="center"
                        android:text="Meta de ingresos"
                        android:textColor="@color/button_text" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card del Jefe -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_jefe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_card_bordered"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header del Jefe -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_large"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/jefe"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_very_large"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_jefe_total_registros"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_medium"
                            android:text="@string/jefe_total_registros"
                            android:textColor="@color/balance_green"
                            android:textSize="@dimen/text_size_medium"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_jefe_saldo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_medium"
                            android:text="@string/jefe_saldo"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/tv_jefe_saldos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_large"
                            android:text="@string/jefe_saldos"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>

                    <!-- Botones superiores del Jefe -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_bordados"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_medium"
                            android:layout_weight="1"
                            android:background="@drawable/button_rounded_white"
                            android:text="@string/bordados"
                            android:textColor="@color/white"
                            android:contentDescription="@string/bordados"
                            android:textSize="@dimen/text_size_medium"
                            android:minHeight="@dimen/button_min_height"
                            tools:ignore="TextContrastCheck" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_planchados"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_weight="1"
                            android:background="@drawable/button_rounded_white"
                            android:text="@string/planchados"
                            android:textColor="@color/white"
                            android:contentDescription="@string/planchados"
                            android:textSize="@dimen/text_size_medium"
                            android:minHeight="@dimen/button_min_height"
                            tools:ignore="TextContrastCheck" />
                    </LinearLayout>

                    <!-- Botones inferiores del Jefe -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_registro_jefe"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:layout_weight="1"
                            android:background="@drawable/button_rounded_blue"
                            android:text="@string/registro"
                            android:textColor="@color/white"
                            android:contentDescription="@string/cd_registro_jefe"
                            android:textSize="@dimen/text_size_small"
                            android:minHeight="@dimen/button_min_height" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_descargar_pdf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_weight="1"
                            android:background="@drawable/button_rounded_blue"
                            android:text="@string/descargar_pdf"
                            android:textColor="@color/white"
                            android:contentDescription="@string/descargar_pdf"
                            android:textSize="@dimen/text_size_small"
                            android:minHeight="@dimen/button_min_height"
                            tools:ignore="TouchTargetSizeCheck" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_adelantos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_weight="1"
                            android:background="@drawable/button_rounded_blue"
                            android:text="@string/adelantos"
                            android:textColor="@color/white"
                            android:contentDescription="@string/adelantos"
                            android:textSize="@dimen/text_size_small"
                            android:minHeight="@dimen/button_min_height"
                            tools:ignore="VisualLintButtonSize" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card de Clemente -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_clemente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_card_bordered"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header de Clemente -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/clemente"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:orientation="vertical">



                            <TextView
                                android:id="@+id/tv_chompas_numero"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/numero_cero"
                                android:textColor="@color/balance_blue"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_clemente_saldo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/saldo_s_0"
                            android:textColor="@color/balance_yellow"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Botones de Clemente -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_registro_clemente"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_rounded_blue"
                            android:text="@string/registro"
                            android:textColor="@color/white"
                            android:contentDescription="@string/cd_registro_clemente"
                            android:textSize="14sp"
                            android:minHeight="48dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_pagos_clemente"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_bordered_accent"
                            android:text="@string/pagos"
                            android:textColor="@color/white"
                            android:contentDescription="@string/cd_pagos_clemente"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:minHeight="48dp"
                            tools:ignore="TextContrastCheck" />
                    </LinearLayout>
                    
                    <!-- Botón registrar servicio de Clemente (solo uno) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_registrar_clemente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/button_bordered_accent"
                        android:text="@string/registrar_servicio_clemente"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:elevation="4dp"
                        android:minHeight="56dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card de Lalo -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_lalo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_card_bordered"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header de Lalo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/lalo"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:orientation="vertical">



                            <TextView
                                android:id="@+id/tv_ponchos_numero"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/numero_cero"
                                android:textColor="@color/balance_blue"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_lalo_saldo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/saldo_s_0"
                            android:textColor="@color/balance_yellow"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Botones de Lalo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_registro_lalo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_rounded_blue"
                            android:text="@string/registro"
                            android:textColor="@color/white"
                            android:contentDescription="@string/cd_registro_lalo"
                            android:textSize="14sp"
                            android:minHeight="48dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_pagos_lalo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_bordered_accent"
                            android:text="@string/pagos"
                            android:textColor="@color/white"
                            android:contentDescription="@string/cd_pagos_lalo"
                            android:minHeight="48dp"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                    </LinearLayout>
                    
                    <!-- Botón registrar servicio de Lalo (solo uno) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_registrar_lalo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/button_bordered_accent"
                        android:text="@string/registrar_servicio_lalo"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:elevation="4dp"
                        android:minHeight="56dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

        <!-- Overlay de éxito: check verde redondo -->
        <FrameLayout
            android:id="@+id/success_check_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_success_check"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/success_circle"
                android:padding="12dp"
                android:src="@drawable/ic_check_white_24"
                android:contentDescription="Éxito" />
        </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>